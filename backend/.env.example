# Backend Nativo - GameFlix Integrado
PORT=3000
NODE_ENV=production

# CORS: Aceitar localhost E domínio
CORS_ORIGIN=*

# Configurações de Email (IMAP) - Steam Guard
EMAIL_USER=seu_email@dominio.com
EMAIL_PASSWORD=sua_senha_aqui
EMAIL_HOST=mail.seudominio.com
EMAIL_PORT=993
EMAIL_TLS=true
EMAIL_MAILBOX=INBOX

# Steam Guard - Parâmetros de busca
STEAM_EMAIL_SUBJECT=Steam Guard Code
STEAM_CODE_REGEX=([A-Z0-9]{5})
STEAM_CODE_MAX_AGE_MIN=30

# Integração GGCheckout
GG_CHECKOUT_CHECKOUT_URL=https://www.ggcheckout.com/checkout/...
GG_CHECKOUT_WEBHOOK_SECRET=sua-chave-secreta-legado
GGCHECKOUT_WEBHOOK_SECRET=sua-chave-secreta-streaming